class Solution {
public:
    bool isPalindrome(int x) {
if (x < 0)
    return false;
   
else {
    int t = x;
    long a = 0;
    while (x > 0) {
        a = x % 10 + a * 10;
        x = x / 10;
    }
    return (a == t);}


}
};
